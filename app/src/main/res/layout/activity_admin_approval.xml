<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peminjaman Baru"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/blue_dark"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBorrowRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_notification"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvEmptyBorrow"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Belum ada riwayat peminjaman"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#9E9E9E"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi Pengembalian"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/blue_dark"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReturnRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_notification"/>

            <TextView
                android:id="@+id/tvEmptyReturn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Belum ada riwayat peminjaman"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#9E9E9E"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>