<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_activity.AdminDashboardActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/goToAddToolPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to add tool page"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/adminNavView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white_modif"
        app:itemActiveIndicatorStyle="@null"
        app:itemIconSize="30sp"
        app:itemIconTint="@drawable/selector_nav_items"
        app:itemTextColor="@drawable/selector_nav_items"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/admin_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>